{
    "manifest_version": 3,
    "name": "Web Request Capture Pro",
    "version": "2.0",
    "description": "Advanced web request capture, filter and analysis tool with real-time preview.",
    "permissions": [
      "tabs",
      "webRequest",
      "webNavigation",
      "scripting",
      "storage",
      "activeTab",
      "downloads"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },    "action": {
      "default_icon": {
        "16": "default_icon16.png",
        "48": "default_icon48.png",
        "128": "default_icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }